<!DOCTYPE HTML>
<html>
<head>
  <title>FitData</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
  <link href = "css/styles.css" rel = "stylesheet">
</head>
<body>
  <!-- HEADER -->
  <nav class="navbar navbar-dark bg-inverse">
    <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2" aria-controls="exCollapsingNavbar2" aria-expanded="false" aria-label="Toggle navigation">
      &#9776;
    </button>
    <div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2">
      <a class="navbar-brand" href="/">FitData</a>
      <ul class="nav navbar-nav">

        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>

      </ul>
    </div>
  </nav>
  <!-- ********************************************************************* -->


  <div class ="container">
    <br> <br>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-3">Previous contributions</h1>
        <p class="lead">View previous contributions and see how they compare with others</p>
      </div>
    </div>
    <div class = "row">
      {{#answers}}
      {{#if currentstatus}}
      <div class = "col-xs-12">
        <div class = "card card-block">
          <h3 class="card-title">{{question}} <span class="tag tag-default {{category}}" style = "font-size: 0.6em;">{{category}}</span></h3>

          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#previousAnswer{{index}}">
            View Responses
          </button>

          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#previousAnswer{{index}}Graph">
            View Graphs
          </button>

          <!-- Modal -->
          <div class="modal fade" id="previousAnswer{{index}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <h4 class="modal-title" id="myModalLabel">Survey Resonses to {{category}} question</h4>
                </div>
                <div class="modal-body">
              <!-- breakdown -->
            </div>
            {{#subquestions}}
            <div class ="previous-questions">
              <h4>{{question}}</h4>
              <p>{{reply}}</p>
            </div>
            {{/subquestions}}

            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal for Graphs -->
      <div class="modal fade" id="previousAnswer{{index}}Graph" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="myModalLabel">Graphs to {{category}} question</h4>
            </div>
            <div class="modal-body">
              <!-- Question -->
              <!-- <h2 style="width: 100%; text-align: center;">{{question}}</h2> -->

              <h4 style="width: 100%; text-align: center;">Data from all contributors of this question</h4>
              <div style ="text-align: center;">
              <img class ="previous-photo" src="{{photo1}}">
              <img class ="previous-photo" src="{{photo2}}">
            </div>
          <!-- breakdown -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

    </div>
  </div>
  {{/if}}
  {{/answers}}

</div>
<!-- ********************************************************************* -->
<br><br>
<!-- <a href = "/">  <button type="button" class="btn btn-danger">Quit</button></a> -->
</div>
