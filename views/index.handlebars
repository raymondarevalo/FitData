<!DOCTYPE HTML>
<html>
<head>
  <title>FitData</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="http://csshake.surge.sh/csshake-slow.min.css">
  <link href = "css/styles.css" rel = "stylesheet">
</head>
<body>
  <!-- HEADER -->
  <nav class="navbar navbar-dark bg-inverse">

    <div class="navbar-toggleable-xs" id="exCollapsingNavbar2">
      <a class="navbar-brand" href="/">FitData</a>
      <ul class="nav navbar-nav">

        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>

      </ul>
    </div>
  </nav>
  <!-- BODY -->


  <section id = "tbody-id" class = "tbody-class" style = "margin-top: 100px;">
    <div class = "container">
      <div class = "row">

        <!-- Step 1 -->
        <a class ="index-icon" href = "/askquestion" title = "Create Research Project">
          <div class = "col-lg-3">
            <div class ="index-step">
              <h3 class ="index-color">Step 1</h3>
              <img class="hvr-grow" src ="img/edit.png">
              <p class ="index-color">Create Reseach Project</p>
            </div>
          </div>
        </a>

        <!-- Step 2 -->
        <a class ="index-icon" href = "/choosequestion">
          <div class = "col-lg-3" style ="text-align: center;">
            <div class ="index-step">
              <h3 class ="index-color">Step 2</h3>
              <img src ="img/file.png">
              <p class ="index-color">Answer Survey Questions</p>
            </div>
          </div>
        </a>

        <!-- Step 3 -->
        <a class ="index-icon" href = "/resume">
          <div class = "col-lg-3" style = "text-align: center;">
            <div class ="index-step">
              <h3 class ="index-color">Step 3</h3>
              <img src ="img/list.png">
              <p class ="index-color">Resume Answering</p>
            </div>
          </div>
        </a>

        <!-- Step 4 -->
        <a class ="index-icon" href = "/previouscontribution">
          <div class = "col-lg-3" style = "text-align: center;">
            <div class ="index-step">
              <h3 class ="index-color">Step 4</h3>
              <img src ="img/success.png">
              <p class ="index-color">View Contributions</p>
            </div>
          </div>
        </a>

      </div>
    </div>

    <div class ="index-down">
      <a id="down-id" href="#bbody-id" title = "Tutorial"><img class ="shake-slow" src ="img/down.png" href ="#bbody-id"></a>
    </div>
  </section>

  <!-- bottom body -->
  <section id = "bbody-id" class = "bbody-class">
    <div class = "container">
      <div class = "row">
        <div class = "col-lg-12 bbody-content">
          <h1 class ="bbody-text">Tutorial</h1>
          <iframe class ="bbody-tutorial" src="https://www.youtube.com/embed/N_qG2HQKqVk" frameborder="0" allowfullscreen></iframe>
        </div>

      </div>
    </div>
  </section>
  <!-- FOOTER -->

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js" integrity="sha384-VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU" crossorigin="anonymous"></script>
  <script src ="js/index.js"></script>
</body>
